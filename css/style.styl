.flex-half 
    flex 1 1 0
    box-sizing border-box

.hipster-left-half
    position absolute
    top 0
    left 0
    bottom 0
    width 50%
    background $hipsterBackground1
    background-size cover !important
    
.hipster-right-half
    position absolute
    top 0
    right 0
    bottom 0
    width 50%
    box-shadow -5px 0px 15px -1px rgba(0,0,0,0.3)
