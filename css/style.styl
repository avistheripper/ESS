.down-arrow
    position absolute
    height 45px
    width 105px
    bottom 60px
    left 50%
    transform translateX(-50%)
    animation bob 1.1s alternate infinite ease-in-out
    backface-visibility hidden
    &::before
    &::after
        content ""
        position absolute
        width 40%
        height 4px
        background-color #FFF
        top 20px
    &::before
        transform rotate(36deg)
        left 15%
    &::after
        transform rotate(-36deg)
        left 45.5%    
