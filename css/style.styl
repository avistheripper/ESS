    text-align center
    
.social-buttons-container
    position absolute
    top 0
    left 0
    right 0
    height 80px
    text-align center
    
.social-button
    display inline-block
    position relative
    height 50px
    width 50px
    background-size cover !important
    transition 0.3s ease
    margin 14px 2px
    cursor pointer
    &:hover
        transform scale(1.2)
        transition 0.3s cubic-bezier(0.3, 0.2, 0, 2.5)
