.rela-block
    display block
    position relative

.side-buttons-container
    position fixed
    top 50%
    right 0
    width 80px
    transform translateY(-50%)
    background-color rgba(0,0,0,0.1)
    box-shadow 0 5px 14px 3px rgba(0,0,0,0.2)
    &:hover
        background-color rgba(0,0,0,0.4)
        padding-bottom 24px
        width 100px
        & .side-button
            height 35px
            width 35px
            margin 45px auto
            backface-visibility hidden
            &::before
                opacity 1
                transition 0.4s 0.4s ease
            &:after
                text-decoration none
                left 51%
                transition 0.3s 0.15s ease
        
.side-button
    display block
    position relative
    height 8px
    width 8px
    background-color white
    border-radius 100%
    transition 0.3s ease
    margin 24px auto
    cursor pointer
    &:after
        position absolute
        bottom -20px
        left 100px
        width 60px
        transition 0.3s ease
        text-align center
        color white
        font-family "Raleway"
        font-size 12px
        font-family 600
        letter-spacing 2px
        transform translateX(-50%)
    &:nth-child(1)
        &::before
            content ""
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%) rotate(45deg)
            height 60%
            width 60%
            background-color #222
            opacity 0
            transition 0.3s ease
        &::after
            content "ESS"
    &:nth-child(2)
        &::before
            content ""
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            height 80%
            width 80% 
            background url('https://cdn4.iconfinder.com/data/icons/brainy-icons-free-36-science-and-education-icons/64/glasses_64.png') no-repeat center
            background-size cover
            opacity 0
            transition 0.3s ease
        &::after
            content "Secure"
    &:nth-child(3)
        &::before
            content ""
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            height 80%
            width 80% 
            background url('https://cdn2.iconfinder.com/data/icons/video-gaming-outline/32/playstation_gaming_game_video-128.png') no-repeat center
            background-size 80%
            opacity 0
            transition 0.3s ease
        &::after
            content "Commercial"
    &:nth-child(4)::after
        content "Contact"
    &:nth-child(5)::after
        content "Or die"
    &:hover
        background-color #DA2
    &.active
        background-color #DA2
    
.big-section
