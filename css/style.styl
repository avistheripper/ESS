.hipster-scroll-selector
    display block
    position relative
    z-index 15
    height 70px
    width 100%
    box-shadow 0px 5px 15px 0px rgba(0,0,0,0.3)
    text-align center
    & .hipster-selector-link
        display inline-block
        text-decoration none
        color black
        position relative
        font-size 14px
        margin 0 8px
        line-height 70px
        cursor pointer
        &::before
            content ""
            position absolute
            height 2px
            width 80%
            background-color transparent
            bottom 10px
            left 50%
            transform translateX(-50%)
            transition 0.3s ease
        &:hover::before
            bottom 20px
            background-color black
        &.active::before
            bottom 20px
            background-color black
            
.selection-box
    position absolute
    z-index 5
    opacity 0
    top 70px
    left 0
    right 0
    bottom 0
    background-color $coverColor3
    -webkit-backface-visibility hidden
    -moz-backface-visibility hidden
